<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.sky.user.mapper.CategoryMapper">

    <select id="getNameById" resultType="java.lang.String">
        select name from sky_take_out.category where id = #{categoryId}
    </select>

    <select id="getListByType" resultType="com.sky.user.pojo.entity.Category">
        select * from sky_take_out.category where type = #{type}
    </select>

    <select id="getList" resultType="com.sky.user.pojo.entity.Category">
        select * from sky_take_out.category
    </select>
</mapper>